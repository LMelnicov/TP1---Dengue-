doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= titulo
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH", crossorigin="anonymous")
    <script src="https://kit.fontawesome.com/16358f7c36.js" crossorigin="anonymous"></script>
  body
    nav.navbar.bg-success
      div.container-fluid
        a.navbar-brand.text-white DENGUE EN TUPUNGATO
        
    table.table.table-striped.table-hover.table-dark.text-white
      thead
        tr
          th(scope="col") #
          th(scope="col") NOMBRE
          th(scope="col") APELLIDO
          th(scope="col") DNI
          th(scope="col") DIRECCION
          th(scope="col") TIPO
          th(scope="col")
          th(scope="col") 
        tr
          td
          td
            input.form-control(type="text", placeholder="Ingrese nombre" id="nombre")
          td
            input.form-control(type="text", placeholder="Ingrese apellido" id="apellido")
          td
            input.form-control(type="text", placeholder="Ingrese DNI" id="dni")
          td
            input.form-control(type="text", placeholder="Ingrese direcci√≥n" id="direccion")
          td
            input.form-control(type="text", placeholder="Ingrese tipo" id="tipo")
          td
            button.btn.btn-success(type="button", id="btn_agregar") 
              i.fa-solid.fa-check
          td
      tbody
        each paciente in pacientes
          tr
            td= paciente.id
            td= paciente.nombre
            td= paciente.apellido
            td= paciente.dni
            td= paciente.direccion
            td= paciente.tipo
            td
              //button.btn.btn-warning(type="button")
                i.fa-regular.fa-pen-to-square(style="color: #ffffff;")
              button.btn.btn-danger(type="button" class="borrar" id=paciente.id)
                i.fa-solid.fa-trash(style="color: #ffffff;")
            td
  script(src="funciones.js")

